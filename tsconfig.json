{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "./*.js",
  ],
  "rootDir": "./src"
}