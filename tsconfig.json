{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "crypto": ["./node_modules/crypto-browserify"],
      "stream": ["./node_modules/stream-browserify"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "./*.js"],
  "rootDir": "./src"
}
